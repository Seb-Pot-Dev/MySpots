#skateboard {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: black;
  transform: rotate(90deg);


}
#skateboard .board {
  width: 50px;
  height: 170px;
  border-radius: 25px;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
#skateboard .wheels {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-right: -8px;
}
#skateboard .wheels div {
  height: 20px;
  width: 20px;
  border-radius: 25px;
  background: darkgray;
  border: 5px solid grey;
}
#skateboard .screw-holes {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 8px;
}
#skateboard .screw-holes div {
  background: black;
  width: 4px;
  height: 4px;
  border-radius: 2px;
}
.skateboard-wrapper {
  transition: transform 1.2s ease; /* Ajoute une transition fluide */
}

#skateboard:hover .skateboard-wrapper {
  transform: rotateY(360deg); /* Rotation initiale à 0 degrés sur l'axe Y */

}
/* Style pour le texte "MySpot" */
