{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="my-profile-container">
    <form method="post" class="max-w-md mx-auto p-4 bg-white shadow-md rounded-lg">
        {% if error %}
            <div class="mb-4 p-3 bg-red-200 text-red-700">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-4">You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a></div>
        {% endif %}

        <h1 class="mb-4 text-xl font-medium">Please sign in</h1>
        <label for="inputEmail" class="block mb-2 font-medium text-gray-700">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="email" required autofocus>
        <label for="inputPassword" class="block mb-2 font-medium text-gray-700">Password</label>
        <input type="password" name="password" id="inputPassword" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
    #}
        <button class="w-full py-2 mt-4 text-white bg-blue-500 rounded-lg hover:bg-blue-600" type="submit">Sign in</button>
    </form>
</div>
{% endblock %}
