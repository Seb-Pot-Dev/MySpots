{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

<link rel="stylesheet" href="{{ asset('css/boxes-cards.css') }}">
<link rel="stylesheet" href="{{ asset('css/buttons.css') }}">

<!-- Si l'utilisateur est connecté et qu'il a le ROLE_ADMIN-->
{% if app.user and is_granted('ROLE_ADMIN') %}
<div class="my-profile-container">

<div class="flex justify-center">
    <h1>Hello {{ app.user.pseudo }}! ✅</h1>
</div>
<div class="admin-top flex justify-center gap-4">
    <!-- ajouter un module -->
    <a href="{{ path('app_module') }}">
        <div class="my-box">
            <i class="fa-solid fa-pallet"></i>
            Ajouter un module
            <i class="fa-solid fa-pallet"></i>
        </div>
    </a>
    <!-- voir liste des utilisateurs -->
    <a href="{{ path('listUsers_admin') }}">
    <div class="my-box">
        <i class="fa-solid fa-users"></i>
        Voir la liste des utilisateurs
        <i class="fa-solid fa-users"></i>
    </div>
    </a>
</div>
<div class="admin-bottom flex justify-center gap-4">
<div class="my-box table-admin-box table-admin-box">
    <h4 class="text-xl">Liste des spots en attente de validation</h4>
    <table class="list-container table-admin">
        <thead>
            <tr>
                <th>Nom du spot</th>
                <th>Création</th>
                <th>Autheur</th>
                <th>Modération</th>
            </tr>
        </thead>
        <tbody>
        {% for spot in spots %}
            {% if spot.isValidated == false %}
            <tr>
                <td><a href="{{  path('show_spot', {'idSpot': spot.id}) }}">{{spot.name}}</a></td>
                <td>{{spot.creationDate | date('d/m/Y H:i')}}</td>
                <td>{{ spot.author }}</td>
                <td><a class="delete-button" href="{{ path('deleteSpot_admin', {'id':spot.id}) }}"><i class="fa-regular fa-trash-can"></i></a>
                <a href="{{ path('edit_spot', {'id':spot.id}) }}"><i class="fa-regular fa-pen-to-square"></i></a>
                <a href="{{ path('validateSpot_admin', {'id':spot.id}) }}"><i class="fa-regular fa-square-check"></i></a></td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="my-box ">
    <h4 class="text-xl">Liste des spots en ligne</h4>
    <table class="list-container table-admin table-admin-box">
        <thead>
            <tr>
                <th>Nom du spot</th>
                <th>Création</th>
                <th>Autheur</th>
                <th>Modération</th>
            </tr>
        </thead>
        <tbody>
        {% for spot in spots %}
            {% if spot.isValidated == true %}
            <tr>
                <td><a href="{{  path('show_spot', {'idSpot': spot.id}) }}">{{spot.name}}</a></td>
                <td>{{spot.creationDate | date('d/m/Y H:i')}}</td>
                <td>{{ spot.author }}</td>
                <td>
                    <a class="delete-button" href="{{ path('deleteSpot_admin', {'id':spot.id}) }}"><i class="fa-regular fa-trash-can"></i></a>
                    <a href="{{ path('edit_spot', {'id':spot.id}) }}"><i class="fa-regular fa-pen-to-square"></i></a>
                    <a href="{{ path('validateSpot_admin', {'id':spot.id}) }}"><i class="fa-regular fa-square-check"></i></a>
                </td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% else %}
<p>Vous devez être connecté en tant qu'administrateur pour consulter cette page.</p>
{% endif %}
</div>
</div>
</div>
<script src="{{ asset('js/buttons.js') }}"></script>
{% endblock %}
