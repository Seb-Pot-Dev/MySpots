{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ app.user.pseudo }}! ✅</h1>

<h3>La liste des spots récéments ajoutés:</h3>

<ul>
{% for spot in spots %}
<li>
<a href="{{  path('show_spot', {'id': spot.id}) }}">
{{spot.name}}
{{spot.creationDate | date('d/m/Y h:m:s')}}
</a>
<a href="{{ path('deleteSpot_admin', {'id':spot.id}) }}">Suppr</a>

    <!-- vérifier si le spot est validé ou non / en twig, pas de get/set -->
    {% if not spot.isValidated %}
        <a href="{{ path('validateSpot_admin', {'id':spot.id}) }}">Validate</a>
    {% else %}
        <a href="{{ path('validateSpot_admin', {'id':spot.id}) }}">Unvalidate</a>
    {% endif %}

</li>

{% endfor %}
</ul>
    
</div>
{% endblock %}
